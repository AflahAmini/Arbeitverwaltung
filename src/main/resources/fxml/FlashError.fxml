            <Image url="@../images/icon_error.png" />
         </image>
      </ImageView>
      <HBox alignment="CENTER_LEFT" prefHeight="25.0" prefWidth="123.0" HBox.hgrow="ALWAYS">
         <children>
            <Label fx:id="labelMessage" maxWidth="1.7976931348623157E308" prefHeight="25.0" prefWidth="472.0" text="Error Message!" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Label>
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="6.0" left="6.0" right="6.0" top="6.0" />
   </padding>
</HBox>
